{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
